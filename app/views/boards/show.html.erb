<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>詳細ページ</h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @board.title %></h3>
              <div>
              <p></p>
              <p>
                <a>好きな理由　</a>
                <%= @board.why %></p>
              </p>
                <p><%= simple_format(@board.why2) %></p>
              </p>
              <p>
                <a>URL　　　　</a>
                <%= @board.url %></p>
            </div>
              <ul class="list-inline">
                <li class="list-inline-item"><%= l @board.created_at, format: :long  %></li>
                <li class="list-inline-item">by <%= @board.name %></li>
              </ul>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>